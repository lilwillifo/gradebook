<h1><%= @course.title %>: <%= @course.semester.session %> <%= @course.semester.year  %></h1>

<h2>Enrolled Students</h2>
<ul>
  <% @course.students.sort.each do |student| %>
    <li class='student'><%= student.name %>: <%= student.enrollments.find_by(course: @course).grade %> (<%=link_to "Edit Grade", edit_course_enrollment_path(@course, student.enrollments.find_by(course: @course))  %>)</li>
    <% end %>
</ul>
<h2>Add another student to your roster <%= link_to "here.", new_course_enrollment_path(@course) %></h2>
<h2>Remove from your roster:</h2>
<%= render partial: 'form' %>
