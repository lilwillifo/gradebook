<% @semesters.each do |semester| %>
  <%= link_to "#{semester.session} #{semester.year}", "/dashboard?session=#{semester.session}&year=#{semester.year}" %>
<% end %>
<% if @semester %>

  <%= @semester.session %> <%= @semester.year %>
  <h2>Cumulative GPA: <%= current_user.student.gpa(@semester) %>
  <h2>Your Courses:</h2>
  <% @enrollments.each do |enrollment| %>
    <%= enrollment.course.title %>: <%= enrollment.grade %>
  <% end %>
<% end %>
